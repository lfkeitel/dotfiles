sys-upgrade() {
    linux_distro="$(gawk -F= '/^NAME/{print $2}' /etc/os-release 2>/dev/null | tr -d '"')"
    if [[ $linux_distro == "Ubuntu" ]]; then
        sudo apt update && sudo apt upgrade -y && sudo apt autoremove -y
    elif [[ $linux_distro == "Fedora" ]]; then
        sudo dnf upgrade -y
    fi
}
