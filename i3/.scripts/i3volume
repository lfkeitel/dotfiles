#!/bin/bash

case $BLOCK_BUTTON in
    1) st -e ncpamixer & disown ;;
    3) pamixer -t ;;
    4) pamixer -i 5 ;;
    5) pamixer -d 5 ;;
esac

printpastatus() {
    [[ $(pamixer --get-mute) = "true" ]] && echo -n ðŸ”‡ mute && exit

    LEVEL=$(pamixer --get-volume)
    if [ $LEVEL -eq 0 ]; then
        echo "ðŸ”‡ $LEVEL%"
    elif [ $LEVEL -lt 30 ]; then
        echo "ðŸ”ˆ $LEVEL%"
    elif [ $LEVEL -lt 70 ]; then
        echo "ðŸ”‰ $LEVEL%"
    elif [ $LEVEL -lt 100 ]; then
        echo "ðŸ”Š $LEVEL%"
    else
        echo "ðŸ”Š$LEVEL%"
    fi
}
printpastatus
