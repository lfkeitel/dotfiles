# Variables
set $mod Mod4
set $ws1 "1: web"
set $ws2 "2: terminal"
set $ws3 "3: email"
set $ws4 "4: chat"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

set $exiti3 "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
set $browser google-chrome-stable
set $terminal gnome-terminal
set $i3lock /home/lfkeitel/Scripts/i3lock.sh

font pango:Inconsolata 13

# Startup applications
# Autolock desktop after 15 minutes
exec --no-startup-id xautolock -time 15 -locker '/home/lfkeitel/Scripts/i3lock.sh' &
# Set wallpaper
exec --no-startup-id feh --bg-scale ~/Pictures/wallpaper.jpg
# Set screen layout
exec --no-startup-id ~/.screenlayout/default.sh
# Start compositor
exec --no-startup-id compton -f
# Start Network Manager
exec --no-startup-id nm-applet

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Keybinds
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

bindsym $mod+a focus parent
bindsym $mod+Shift+a exec true

bindsym $mod+b exec $browser
bindsym $mod+Shift+b exec true

bindsym $mod+c exec true
bindsym $mod+Shift+c reload

bindsym $mod+d exec rofi -show run
bindsym $mod+Shift+d exec true

bindsym $mod+e layout toggle split
bindsym $mod+Shift+e exec $exiti3

bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+f exec true

bindsym $mod+g exec true
bindsym $mod+Shift+g exec true

bindsym $mod+h split h
bindsym $mod+Shift+h exec true

bindsym $mod+i exec true
bindsym $mod+Shift+i exec true

bindsym $mod+j focus left
bindsym $mod+Shift+j move workspace to output left

bindsym $mod+k focus down
bindsym $mod+Shift+k move down

bindsym $mod+l focus up
bindsym $mod+Shift+l move up

bindsym $mod+m exec true
bindsym $mod+Shift+m exec true

bindsym $mod+n exec true
bindsym $mod+Shift+n exec true

bindsym $mod+o exec true
bindsym $mod+Shift+o exec true

bindsym $mod+p exec true
bindsym $mod+Shift+p exec true

bindsym $mod+q exec true
bindsym $mod+Shift+q kill

bindsym $mod+r mode "resize"
bindsym $mod+Shift+r restart

bindsym $mod+s layout stacking
bindsym $mod+Shift+s exec true

bindsym $mod+t exec thunderbird
bindsym $mod+Shift+t exec true

bindsym $mod+u exec true
bindsym $mod+Shift+u exec true

bindsym $mod+v split v
bindsym $mod+Shift+v exec true

bindsym $mod+w layout tabbed
bindsym $mod+Shift+w exec true

bindsym $mod+x exec true
bindsym $mod+Shift+x exec $i3lock

bindsym $mod+y exec true
bindsym $mod+Shift+y exec true

bindsym $mod+z exec true
bindsym $mod+Shift+z exec true

bindsym $mod+Return exec $terminal
bindsym $mod+Shift+Return exec true

bindsym $mod+space focus mode_toggle
bindsym $mod+Shift+space floating toggle

bindsym $mod+semicolon focus right
bindsym $mod+Shift+semicolon move workspace to output right

# Arrow keys
bindsym $mod+Left focus left
bindsym $mod+Shift+Left move left

bindsym $mod+Down focus down
bindsym $mod+Shift+Down move down

bindsym $mod+Up focus up
bindsym $mod+Shift+Up move up

bindsym $mod+Right focus right
bindsym $mod+Shift+Right move right

# Media controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Start applications on specific workspaces
for_window [class="Google-chrome"] move container to workspace $ws1
for_window [class="Gnome-terminal"] move container to workspace $ws2
for_window [class="Thunderbird"] move container to workspace $ws3
for_window [class="Mattermost"] move container to workspace $ws4
for_window [class="Hexchat"] move container to workspace $ws4

mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bar {
        status_command i3blocks -c /home/lfkeitel/.config/i3/i3blocks.conf
        position top
}
